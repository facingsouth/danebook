<div class="col-sm-12 combox">

  <% commentable.comments.includes(:likes, :user, :profile).each do |comment| %>

  <div class="col-sm-2 posted-by">
    <%= image_tag image_path("user_silhouette_generic.gif") %>
  </div>
  <div class="col-sm-10 posted-name">
    <p>
      <%= comment.user.profile.full_name %>
      <br>
      Commented on <%= comment.created_at.to_date %>
    </p>
  </div>
  <div class="col-sm-12">
    <p class="post-text">
      <%= comment.body %>
    </p>
    <div class="col-sm-6 ">
      <%= like_button(comment) %>
    </div>
    <% if current_user == comment.user %>
      <div class="col-sm-6">
        <%= link_to "Delete", comment_path(comment.id), method: :delete, class: "pull-right" %>
      </div>
    <% end %>
    <div class="col-sm-12">
      <span class="grey"><%= display_likes_msg(comment) %></span>
    </div>
  </div>
  <% end %>

  <%= render partial: "comments/comment_form", locals: { commentable: commentable } %>
</div>