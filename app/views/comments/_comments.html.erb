<div class="col-sm-12 combox">

  <% post.comments.each do |comment| %>

  <div class="col-sm-2 posted-by">
    <img src="https://www.blastr.com/sites/blastr/files/styles/blog_post_media/public/dawn_apes_caesar.jpg?itok=-jHgIwlD">
  </div>
  <div class="col-sm-10 posted-name">
    <p>
      <%= comment.user.profile.full_name %>
      <br>
      Commented on <%= comment.created_at.to_date %>
    </p>
  </div>
  <div class="col-sm-12">
    <p class="post-text">
      <%= comment.body %>
    </p>
    <div class="col-sm-1 ">
      <% if current_user.like?(comment.id, "Comment") %>
        <%= link_to "Unlike", like_path(current_user.get_like_id(comment.id, "Comment")), 
                            method: :delete %>
      <% else %>
        <%= link_to "Like", likes_path(user_id: current_user.id,
                                      likable_id: comment.id,
                                      likable_type: "Comment"), 
                            method: :post %>
      <% end %>
    </div>
    <div class="col-sm-8">
      <span class="grey"><%= Like.display_likes_msg(comment) %></span>
    </div>
    <% if current_user == comment.user %>
      <div class="col-sm-1 col-sm-offset-8">
        <%= link_to "Delete", comment_path(comment.id), method: :delete %>
      </div>
    <% end %>
  </div>
  <% end %>
  <%= form_for Comment.new, class: "form-group" do |comment_fields| %>
    <div class="col-sm-12">
      <%= comment_fields.text_area :body, placeholder: "Write a comment", class: "form-control" %>
    </div>
    <div class="col-sm-12 submit-bar">
      <%= comment_fields.hidden_field :user_id, value: current_user.id %>
      <%= comment_fields.hidden_field :post_id, value: post.id %> 
      <%= button_tag 'Cancel', :type => 'reset' %>
      <%= comment_fields.submit "Comment", class: "btn btn-primary pull-right" %>
    </div>
  <% end %>
</div>