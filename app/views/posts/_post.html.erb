<article class ="row post">
  <div class="col-sm-2 posted-by">
    <%= image_tag image_path("user_silhouette_generic.gif") %>
  </div>
  <div class="col-sm-10 posted-name">
    <div class="col-sm-12">
      <p><%= user.profile.full_name %><br>Posted on <%= post.created_at.to_date %></p>
    </div>
    <div class="col-sm-12">
      <p class="post-text">
        <%= post.body %>
      </p>
    </div>

  </div>

  <div class="col-sm-12 like-bar">
    <div class="col-sm-1 ">
      <%= like_button(post) %>
    </div>
    <div class="col-sm-1">
      <a href="#">Comment</a>
    </div>
    <% if current_user == user %>
      <div class="col-sm-1 col-sm-offset-8">
        <%= link_to "Delete", post_path(post.id, user_id: current_user.id), method: :delete %>
      </div>
    <% end %>
  </div>

  <div class="col-sm-12">
    <%= display_likes_msg(post) %>
  </div>
  <%= render partial: "comments/comments", locals: {commentable: post} %>
</article>