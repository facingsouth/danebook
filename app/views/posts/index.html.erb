          <div class="col-sm-2 posted-by">
            <img src="http://images6.fanpop.com/image/polls/1384000/1384462_1402305957008_full.jpg">
          </div>
          <div class="col-sm-10 posted-name">
            <div class="col-sm-12">
              <p><%= @user.profile.full_name %><br>Posted on <%= post.created_at.to_date %></p>
            </div>
            <div class="col-sm-12">
              <p class="post-text">
                <%= post.body %>
              </p>
            </div>

          </div>

          <div class="col-sm-12 like-bar">
            <div class="col-sm-1 ">
              <a href="#">Like</a>
            </div>
            <div class="col-sm-1">
              <a href="#">Comment</a>
            </div>
            <% if current_user == @user %>
              <div class="col-sm-1 col-sm-offset-8">
                <%= link_to "Delete", post_path(post.id), method: :delete %>
              </div>
            <% end %>
          </div>
        </article>
      <% end %>

